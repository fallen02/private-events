<figure class="mb-0.5 ml-0.5 flex flex-col items-center justify-center p-5 text-center bg-white border rounded-lg border-gray-200 dark:bg-transparent dark:border-red-700">
  <blockquote class="max-w-xl mx-auto mb-1 text-gray-500 lg:mb-2 dark:text-gray-400">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white"><%= event.title %></h3>
    <p class="mb-2">Time:  <%= event.date.strftime("%d, %B %Y") %>, <%= event.time.strftime("%H:%M") %></p>
    <p class="mb-2">Location:  <%= event.location %></p>
  </blockquote>
  <figcaption class="flex justify-center ">
    <div class="space-y-0.5 font-medium dark:text-white text-left rtl:text-right ms-3">
      <% if user_signed_in? %>
        <div class="text-sm text-gray-500 dark:text-gray-400 ">Created by <%= event.creator.name %></div>
      <% else %>
        <div class="text-sm text-gray-500 dark:text-gray-400 ">Private</div>
      <% end %>
      <div class="w-full flex justify-center">
        <a href="<%= event_path(event.id) %>" class="mt-1 text-white bg-transparent border focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-2 py-1.5 text-center inline-flex items-center dark:bg-transparent  dark:focus:ring-blue-800">
          View
          <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
        </a>
      </div>
    </div>
  </figcaption>
</figure>